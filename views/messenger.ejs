<%- include('header', {title : 'Lego Messenger' }) %>
        <link rel="stylesheet" href="/css/messenger.css">
        <script src="js/messenger.js"></script>
    </head>
    <body onload="fetch('<%= serverurl %>')">
        <div class="chat_window">
            <div class="top_menu">
                <div class="title"><p id="user"><%= username %></p></div>
            </div>
            <ul class="messages">

            </ul>
            <div class="bottom_wrapper clearfix">
                <div class="message_input_wrapper">
                    <textarea class="message_input" placeholder="Type your message here..."></textarea>
                </div>
                <div class="send_message" onclick="sendMessage('<%= serverurl %>')">
                    <div class="icon"></div>
                    <div class="text">Send</div>
                </div>
            </div>
        </div>
        <script>
            window.setInterval(function () {
                fetch("<%= serverurl %>");
            }, 1000);

            $('.message_input').keydown(function (event) {
                if (!event.shiftKey && event.keyCode == 13) {
                    sendMessage('<%= serverurl %>');
                    return false;
                }
            });
        </script>
    </body>
</html>